@model IEnumerable<EndProject.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vehicles</h1>
<p>
    <a asp-action="Create"
       class="btn btn-primary mx-2"> <i class="bi bi-plus-circle"></i>>>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mileage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EngineType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EngineType.Name)
            </td>
            <td>
                    <div class="w-35 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>>Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-info"></i>>>Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i>>Delete</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
